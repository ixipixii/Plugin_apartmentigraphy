<Window x:Class="ADSK_Room_Function.RoomSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADSK_Room_Function"
             mc:Ignorable="d" 
             Height="315" Width="300" MinWidth="200"
             Title="Назначение">
    <StackPanel>
        <ListView x:Name="LVR" 
                  Height="200"
                 Margin="5 0 5 5" 
                 SelectedItem = "{Binding NameRoomlList}"
                 SelectionChanged= "LVR_SelectionChanged"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                    />
        <Button Content="Назначить" Command="{Binding Appoint}"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="150"
                Height="25"/>
        <Button Content="Продолжить выбор" Command="{Binding Сontinue}"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="150"
                Height="25"/>
    </StackPanel>
</Window>
