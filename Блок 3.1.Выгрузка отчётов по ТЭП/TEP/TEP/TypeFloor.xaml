<Window x:Class="TEP.TypeFloor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TEP"
             mc:Ignorable="d" 
             Height="255" Width="300" MinWidth="250"
             Title="Ввод данных">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Введите типовые этажи и секцию:"
               Grid.Row="0"
               Margin="5 5 5 5"></Label>

        <Label Content="Стартовый этаж:"
               Grid.Row="1"
               Margin="5 5 5 5"></Label>

        <TextBox x:Name="StartFloor"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Margin="140,5,0,5" Width="135"></TextBox>

        <Label Content="Конечный этаж:"
               Grid.Row="2"
               Margin="5 5 5 5"></Label>

        <TextBox x:Name="EndFloor"
                Grid.Row="2"
                HorizontalAlignment="Left"
                Margin="140,5,0,5" Width="135"></TextBox>

        <Label Content="Секция:"
               Grid.Row="3"
               Margin="5 5 5 5"></Label>

        <TextBox x:Name="Section"
                Grid.Row="3"
                HorizontalAlignment="Left"
                Margin="140,5,0,5" Width="134"
                 IsEnabled="{Binding IsChecked, ElementName=CB}"></TextBox>

        <CheckBox x:Name="CB"
                     Grid.Row="3"
                     VerticalAlignment="Center" 
                     Margin="58,0,211,0"></CheckBox>

        <Button Content="Подтвердить"
                Grid.Row ="4"
                Margin="140,10,10,10"
                Click="Button_Click"></Button>
        
        <Button Content="               Отчёт без &#xD;&#xA;показателей эффективности"
            Grid.Row ="4"
            Margin="140,40,10,-20"
            Click="Button_Click_1" FontSize="8" Background="White"/>
    </Grid>
</Window>
