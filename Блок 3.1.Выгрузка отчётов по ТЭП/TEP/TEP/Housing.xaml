<Window x:Class="TEP.Housing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TEP"
             mc:Ignorable="d" 
             Height="160" Width="340" MinWidth="250"
             Title="Ввод данных">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Введите корпус, который будет выводится в отчёте:"
               Grid.Row="0"
               Margin="5 5 5 5"></Label>

        <Label Content="Номер корпуса:"
               Grid.Row="1"
               Margin="5 5 5 5"></Label>

        <TextBox x:Name="NumberHousing"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Margin="140,5,0,5" Width="135"></TextBox>

        <Button Content="Подтвердить"
                Grid.Row ="2"
                Margin="10 10 10 10"
                Click="Button_Click"></Button>
    </Grid>
</Window>
